<h1>Users#new</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render('shared/error_messages', object: f.object) %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', require: true %>

      <%= f.label :user_name %>
      <%= f.text_field :user_name, class="form-control", placeholder="input without space", require: true %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', require: true %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', require: true %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control', require: true %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
